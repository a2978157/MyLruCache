<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="retrofit.mifeng.us.mylrucache.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="下载图片"
            android:id="@+id/xiazhai"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="内存图片"
            android:id="@+id/neicun"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="本地图片"
            android:id="@+id/sdk"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="删除本地图片"
            android:id="@+id/shanchusdk"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="清空本地图片"
            android:id="@+id/qingkongsdk" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="删除内存图片"
            android:id="@+id/shanchunei"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv"/>
    </LinearLayout>

</RelativeLayout>
